<div class='navbar navbar-inverse'>
  <div  class='container-fluid'>
    <div class='navbar-header'>
      <a class='navbar-brand' href="#"><%= @user.image %></a>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-md-1'>
      <h3><%= @user.first_name %>'s Playlists</h3>
      <% @user.playlists.each do |playlist| %>
        <li<%= link_to playlist.name, playlist_path(playlist.id),
          class: 'play_list' %>></li>
      <% end %>
    </div>
  </div>
</div>
