<button type="button" class='bmf-modalButton' data-toggle='modal' data-target='#modalPlaylist'>Play All</button>
<% require 'pry'; binding.pry %>
<% @playlist.each_with_index do |list, index| %>
  <%= image_tag list.img_high, class: 'img-responsive center-block' %>
  <!-- Trigger the modal with a button -->
  <button type="button" class="bmf-modalButton" data-toggle="modal" data-target="#myModal<%= index + 1 %>">Play</button>

  <footer>

    <!-- Modal -->
    <div id="myModal<%= index + 1 %>"  data-id='<%= list.video_id %>'class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content bmd-modalContent" >
          <div class="modal-body">
            <div class="close-button">
              <button type="button" class="close" data-dismiss="modal" aria-label='Close' ><span aria-hidden="true">&times;</span></button>
            </div>
            <div class='embed-responsive embed-responsive-16by9'>
              <iframe id='player' class='embed-responsive-item' src="https://youtube.com/embed/<%= list.video_id %>?rel=0&enablejsapi=1" allowFullScreen='true' frameborder="0"></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <h4 class='card-title text-center'><%= list.title %></h4>
  <p class='card-subtitle mb-2 text-muted text-center'><%= list.description %></p>
<% end %>


<div id="modalPlaylist"  data-id='playlist'class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content bmd-modalContent" >
      <div class="modal-body">
        <div class="close-button">
          <button type="button" class="close" data-dismiss="modal" aria-label='Close' ><span aria-hidden="true">&times;</span></button>
        </div>
        <div class='embed-responsive embed-responsive-16by9'>
          <iframe id='player' class='embed-responsive-item' src="https://youtube.com/embed/<%= @playlist.pluck(:video_id).first %>?rel=0&playlist=<%= @playlist.pluck(:video_id)[1..-1].join(',') %>&enablejsapi=1" allowFullScreen='true' frameborder="0"></iframe>
        </div>
      </div>
    </div>
  </div>
</div>
